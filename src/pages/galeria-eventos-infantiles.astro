                  <div class="absolute top-4 right-4">
                    <div class="bg-white/90 backdrop-blur-sm text-gray-800 px-3 py-2 rounded-xl shadow-lg">
                      <div class="text-center">
                        <div class="text-xs font-semibold text-purple-500 uppercase">
                          {new Date(evento.data.fecha).toLocaleDateString(
                            "es-ES",
                            {
                              month: "short",
                            }
                          )}
                        </div>
                        <div class="text-lg font-bold">
                          {new Date(evento.data.fecha).getDate()}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-pink-600 transition-colors duration-300">
                    {evento.data.nombre}
                  </h3>

                  <p class="text-gray-600 mb-4 line-clamp-3">
                    {evento.data.descripcion}
                  </p>

                  <div class="flex items-center text-gray-500 mb-4">
                    <svg
                      class="w-4 h-4 mr-2 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
